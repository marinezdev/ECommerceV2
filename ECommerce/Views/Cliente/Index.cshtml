        .alert [data-notify="icon"] {
            display: block;
        }

            .alert [data-notify="icon"]::before {
                line-height: 35px;
                font-size: 22px;
                display: block;
                left: 15px;
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                width: 35px;
                height: 35px;
                border-radius: 30px;
                text-align: center;
                color: #fff;
            }

        .alert [data-notify="title"] {
            display: block;
            color: #2b2b2b;
            font-weight: 700;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .alert [data-notify="message"] {
            font-size: 13px;
            color: #908e8e;
        }

        .alert .close {
            background: rgba(255, 255, 255, 0.8);
            width: 25px;
            height: 25px;
            line-height: 25px;
            top: 12px !important;
            border-radius: 50%;
        }

