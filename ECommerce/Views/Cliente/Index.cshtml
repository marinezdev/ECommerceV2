    /*     Alert    */
    .alert {
        border: 0px;
        position: relative;
        padding: .95rem 1.25rem;
        border-radius: 1px;
        color: inherit;
        background-color: #ffffff;
        -webkit-box-shadow: 1px 1px 14px 0px rgba(18, 38, 63, 0.26);
