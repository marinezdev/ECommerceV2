        <script>
        $('#BtnGererarFicha').click(function () {
            $('#BtnGererarFicha').prop('disabled', true);

            swal({
                title: "Espera un momento ...",
                text: "Estamos procesando tu compra.",
                imageUrl: "../images/icons/d3.gif",
                showCancelButton: false,
                confirmButtonColor: "#b0ce68",
            });

            window.location.href = '@Url.Action("SPEIReferencia", "MetodoPago")';
        });
