
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce</title>
    <link rel="shortcut icon" href="~/assets/images/icoCSB.ico">
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">
    <link rel="stylesheet" type="text/css" href="https://common.olemiss.edu/_js/sweet-alert/sweet-alert.css">
    <!--===============================================================================================-->
    <style>
        .wrap-menu-desktop {
            position: fixed;
            z-index: 101;
            /* background-color: #e9ecefc2; */
            background-color: #ffffffe0;
            width: 100%;
            height: 84px;
            top: 0px;
            left: 0px;
            -webkit-transition: height 0.3s, background-color 0.3s;
            -o-transition: height 0.3s, background-color 0.3s;
            -moz-transition: height 0.3s, background-color 0.3s;
            transition: height 0.3s, background-color 0.3s;
        }

        .how-itemcart1 {
            width: 130px;
            position: relative;
            margin-right: 20px;
            cursor: pointer;
        }

        .bor14 {
            border-radius: 10px;
        }

        .BtnOXXO {
            font-family: "Proxima Nova",-apple-system,"Helvetica Neue",Helvetica,Roboto,Arial,sans-serif;
            border-color: #ffc62c;
            background-color: #1c2c73;
            border: 2px solid #ffffff;
            color: #fff;
            border-radius: 10px;
            width: 100%;
            height: 50px;
            font-weight: bold;
        }

            .BtnOXXO:hover {
                background-color: #f19800;
                transition: all 0.4s;
            }

        .hov-btn1:hover {
            border-color: #1c2c73;
            background-color: #f19800;
            color: #fff;
        }

        .bg1 {
            background-color: #b0ce68;
        }

        .footer-links li i {
            margin-right: 15px;
            color: #b1cd69;
            width: 14px;
            text-align: center;
        }

        .btnMpago {
            margin-left: 29%;
            width: 50%;
        }

        @@media (max-width: 991px) {
            .estetic {
                display: none;
            }

            .estetic1 {
                display: block !important;
            }
        }

        @@media (max-width: 600px) {
            .title {
                font-size: 220% !important;
            }
        }
    </style>

</head>
<body>
    <!-- Header -->
    <header>
        <!-- Header desktop -->
        <div class="container-menu-desktop">

            <div class="wrap-menu-desktop">
                <nav class="limiter-menu-desktop container">

                    <!-- Logo desktop -->
                    <a href="@Url.Action("Index", "Tienda")" class="logo">
                        <img src="~/images/icons/CSB_Mexico.png" />
                    </a>

                    <!-- Menu desktop -->
                    <div class="menu-desktop">
                        <ul class="main-menu">
                        </ul>
                    </div>

                    <!-- Icon header -->
                    <div class="wrap-icon-header flex-w flex-r-m">
                        <a href="@Url.Action("Index", "CarroElectronico")" class="flex-c-m cl0 size-103 bg1 bor1 hov-btn2 p-lr-15 trans-04">
                            <i class="fa fa-reply" aria-hidden="true"></i>  &nbsp;&nbsp;  volver al carrito
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div class="top-content">
        <div class="top-content">
            <p class="estetic">
                <br />
                <br />
                <br />
            </p>
            <p class="estetic1" style="display:none;">
                <br />
            </p>
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                        <div class="m-l-25 m-r--38 m-lr-0-xl">
                            <div class=" bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm" style="border-top: 1px solid #e6e6e6; border-radius: 5px;">
                                <div class="row">
                                    <div class="col-sm-12 col-lg-12 m-lr-auto m-b-50 text-center">
                                        <h1 class="title" style="font-size:60px">! PASO FINAL !</h1>
                                        <br />
                                        <img src="~/images/icons/spei_brand.png" />
                                    </div>
                                    <div class="col-sm-12 col-lg-12">

                                        <div class=" p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm text-center">
                                            <p style="font-size:20px"> Estas apunto de pagar con <strong>SPAI</strong> con <strong>CLABE</strong> la cantidad de: </p>
                                            <br />
                                            <h1 class="title" style="font-size:60px">$@ViewBag.Total</h1>
                                            <br />
                                            <!-- Set up a container element for the button -->
                                            <a class="flex-c-m stext-101 cl0 size-116 bg1 bor14 hov-btn1 p-lr-15 trans-04 pointer BtnOXXO" id="BtnGererarFicha">Generar ficha de pago </a>
                                            <br />
                                            <br />
                                            <h5><strong>( Para aclaraciones: email@contacto.com )</strong></h5>
                                            <br />
                                            <h5><strong>Teléfonos: 55@@@@@@@@ - 55@@@@@@@@</strong></h5>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                        <div class="bor10 p-lr-20 p-t-30 p-b-20 m-l-63 m-r-20 m-lr-0-xl p-lr-15-sm" style="background-color: #f7f8f9">
                            <h4 class="mtext-109 cl2 p-b-30 text-center">
                                Resumen de compra
                            </h4>

                            <div class="flex-w  bor12 p-b-13" style="background-color: #ffffff; padding: 20px;">
                                <div class="size-208">
                                    <span class="stext-110 cl2">
                                        Subtotal:
                                    </span>
                                </div>

                                <div class="size-209" style="text-align: right;">
                                    <span class="mtext-110 cl2 text-right" id="SubTotal_">
                                        $@ViewBag.Total
                                    </span>
                                </div>
                            </div>

                            <div class="flex-w  bor12 p-b-13" style="background-color: #ffffff; padding: 20px;">
                                <div class="size-208">
                                    <span class="stext-110 cl2">
                                        Envio:
                                    </span>
                                </div>

                                <div class="size-209 p-r-18 p-r-0-sm w-full-ssm" style="text-align: right;">
                                    <p class="mtext-110 cl2" id="TotalEnvio_">
                                        $0.00
                                    </p>
                                </div>
                            </div>

                            <div class="flex-w p-t-27 p-b-33" style="background-color: #ffffff; padding: 20px;">
                                <div class="size-208">
                                    <span class="mtext-101 cl2">
                                        Total:
                                    </span>
                                </div>

                                <div class="size-209 p-t-1" style="text-align: right;">
                                    <span class="mtext-110 cl2" id="Total_">
                                        $@ViewBag.Total
                                    </span>
                                </div>
                            </div>

                            <br />
                            <h5 class="mtext-109 cl2 p-b-5 text-center">Entrega a domicilio (1)</h5>
                            <div class="flex-w bor12 p-t-15 p-b-30">
                                <div class=" p-r-18 p-r-0-sm w-full-ssm">
                                    <strong><label style="font-size: 16px; color: #222222;">Información del cliente</label></strong>
                                    <p class="stext-111  p-t-2"><strong>Nombre: </strong> @ViewBag.Cliente.Persona.Nombre @ViewBag.Cliente.Persona.ApellidoPaterno @ViewBag.Cliente.Persona.ApellidoMaterno</p>
                                    <p class="stext-111  p-t-2"><strong>Correo electrónico: </strong> @ViewBag.Cliente.Email.email </p>
                                    <p class="stext-111  p-t-2">
                                        <strong>Telefono: </strong>
                                        @{
                                            if (ViewBag.Cliente.Telefono != null)
                                            {
                                                <span>@ViewBag.Cliente.Telefono.telefono </span> <span>-</span>
                                                <span>@ViewBag.Cliente.Telefono.CatTipoTelefono.Nombre</span>
                                            }
                                        }
                                    </p>
                                    <hr />
                                    <strong><label style="font-size: 16px; color: #222222;">Dirección </label></strong>
                                    <p class="stext-111  p-t-2">
                                        @ViewBag.Cliente.PersonaDireccion.CatColonias.CatCp.CatPoblaciones.CatEstados.Estado,
                                        @ViewBag.Cliente.PersonaDireccion.CatColonias.CatCp.CatPoblaciones.Poblacion,
                                        @ViewBag.Cliente.PersonaDireccion.CatColonias.Colonia,
                                        @ViewBag.Cliente.PersonaDireccion.CatColonias.CatCp.CP,
                                        @ViewBag.Cliente.PersonaDireccion.Calle,
                                        @ViewBag.Cliente.PersonaDireccion.NumExterior,
                                        @ViewBag.Cliente.PersonaDireccion.NumInterior
                                        <br />
                                        <strong> Entre calles:</strong>
                                        @ViewBag.Cliente.PersonaDireccion.EntreCalles
                                        <br />
                                        <strong> Referencias: </strong>
                                        @ViewBag.Cliente.PersonaDireccion.Referencias,
                                    </p>
                                    @if (ViewBag.Cliente.PersonaDireccion.RecibirPedido > 0)
                                    {
                                        <p class="stext-111  p-t-2"><strong>Persona quien recibirá el pedido: </strong> </p>
                                        <p class="stext-111  p-t-2"><strong>Nombre: </strong> @ViewBag.Cliente.PersonaDireccion.RecibirNombre @ViewBag.Cliente.PersonaDireccion.RecibirApellidos </p>
                                        <p class="stext-111  p-t-2">
                                            <strong>Telefono: </strong> @ViewBag.Cliente.PersonaDireccion.RecibirTelefono -
                                            @if (ViewBag.Cliente.PersonaDireccion.RecibirTipoTelefono == 0)
                                            {
                                                <strong>FIJO </strong>
                                            }
                                            else
                                            {
                                                <strong>CELULAR </strong>
                                            }
                                        </p>
                                    }
                                    <hr />
                                    <p class="stext-111  p-t-2">
                                        *La fecha de entrega puede cambiar por la disponibilidad del producto, tu ubicación o la forma de pago.
                                    </p>
                                </div>
                            </div>

                            <br />
                            <div class="flex-w bor12 p-t-15 p-b-30">
                                <div class=" p-r-18 p-r-0-sm w-full-ssm">
                                    <table>
                                        @{
                                            foreach (var Arti in ViewBag.ListaArticulos)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="how-itemcart1">
                                                            <img src="https://@Arti.ArticuloImagen.ImagenURL" alt="IMG">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <p>
                                                            <strong>@Arti.ArticuloDetalle.Nombre</strong>
                                                        </p>
                                                        <label style="margin-bottom: 0rem; font-size: 12px; text-transform: lowercase; ">Categoria: <strong style="">@Arti.CatClasificacion.Nombre</strong></label>
                                                        Cantidad : <strong>@Arti.CarroElectronico.Item</strong>
                                                        <strong><label id="Total_@Arti.Articulo.Id" style="text-align: right;">Total: @Arti.PrecioTotalText</label></strong>
                                                        <br />
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                            <br />
                            <div class="flex-w p-t-27 p-b-33" style="padding: 20px; color: #666666; font-size: 25px; ">
                                <div class="size-208">
                                    <strong>
                                        <span class="">
                                            Total:
                                        </span>
                                    </strong>
                                </div>

                                <div class="size-209" style="text-align: right; color: #666666; font-size: 25px; ">
                                    <strong>
                                        <span class="" id="Total_">
                                            $@ViewBag.Total
                                        </span>
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="btnMpago">
                                <a href="@Url.Action("Index", "MetodoPago")" class="flex-c-m stext-101 cl0 size-116 bg1 bor14 hov-btn1 p-lr-15 trans-04 pointer" id="Btn_NuevoDomicilio">
                                    <i class="fa fa-arrow-left" aria-hidden="true"></i> &nbsp; Elige el método de pago
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        <!-- Footer -->
        <footer class="bg3 p-t-75 p-b-32">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-lg-3 p-b-50">
                        <h4 class="stext-301 cl0 p-b-10">
                            ¿ Quiénes somos ?
                        </h4>
                        <p style="color:#ffffff; font-size: 13px;">
                            @*Empresa 100% mexicana, con más de 30 años de experiencia ayudando a empresas nacionales e internacionales.*@
                        </p>
                        <hr />
                        <ul class="footer-links">
                            <li>
                                <a href="#">
                                    <i class="fa fa-map-marker"></i>
                                    ...
                                </a>
                            </li>
                            <li><a href="#"><i class="fa fa-phone"></i> @*55 2909 7024 / 55 3566 4390*@</a></li>
                            <li><a href="#"><i class="fa fa-envelope-o"></i>@*sig_contacto@serviciosinmobiliariosg.com*@</a></li>
                        </ul>

                        <div class="p-t-27">
                            <a href="#" class="fs-18 cl7 hov-cl1 trans-04 m-r-16">
                                <i class="fa fa-facebook"></i>
                            </a>

                            <a href="#" class="fs-18 cl7 hov-cl1 trans-04 m-r-16">
                                <i class="fa fa-instagram"></i>
                            </a>

                            <a href="#" class="fs-18 cl7 hov-cl1 trans-04 m-r-16">
                                <i class="fa fa-pinterest-p"></i>
                            </a>
                        </div>
                    </div>

                    <div class="col-sm-9 col-lg-3 p-b-50">
                        <h4 class="stext-301 cl0 p-b-10">
                            Categories
                        </h4>

                        <ul class="footer-links">
                            @*<li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Accesorios De Alimentación</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Accesorios De Computadoras</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Bocinas </a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Cámara</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Computadora </a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Dispositivos Para Redes </a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Oficina Y Papelería </a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Radios</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Seguridad</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Software </a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>Tabletas</a></li>*@
                        </ul>
                    </div>

                    <div class="col-sm-5 col-lg-2 p-b-50">
                        <h4 class="stext-301 cl0 p-b-10">
                            Información
                        </h4>

                        <ul class="footer-links">
                            <li><a href="@Url.Action("PoliticasPrivacidad", "Inicio")"><i class="fa fa-caret-right" aria-hidden="true"></i>Políticas de privacidad</a></li>
                            <li><a href="@Url.Action("terminosycondiciones", "Inicio")"><i class="fa fa-caret-right" aria-hidden="true"></i>Términos y condiciones </a></li>
                        </ul>
                    </div>

                    @*<div class="col-sm-6 col-lg-1 p-b-50">
                        <h4 class="stext-301 cl0 p-b-10">
                            SERVICIOS
                        </h4>
                        <ul class="footer-links">
                                <li><a href="@Url.Action("Login", "Adm")"><i class="fa fa-caret-right" aria-hidden="true"></i>Mi cuenta </a></li>
                                <li><a href="@Url.Action("Categorias", "Home")"><i class="fa fa-caret-right" aria-hidden="true"></i>Tu interés </a></li>
