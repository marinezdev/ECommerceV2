
@{
    ViewBag.Title = "NombreVerificado";
    Layout = "~/Views/Shared/_Layout_Registro.cshtml";
}

<section class="login-block">
    <!-- Container-fluid starts -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <form class="">
                    <div class="text-center">
                        <img src="~/images/icons/CSB_Mexico.png" alt="logo.png" width="10%" onclick="Redirecionar()">
                    </div>
                    <div class="auth-box card">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <img src="~/images/icons/1611707_verificado.png" alt="logo.png" width="30%">
                                </div>
                                <div class="col-md-12">
                                    <h3 class="text-center" style="font-size: 23px;">Nombre completado</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 class="text-center" style="font-size: 17px; font-weight: 300; padding-top: 15px; color: #009688 "> @ViewBag.Persona </h3>
                                    <br />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="button" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center" id="BtnContinuar"> Continuar  </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- end of form -->
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
    $('#BtnContinuar').click(function () {
        window.location.href = '@Url.Action("Progreso", "Registro")';
    });
</script>
