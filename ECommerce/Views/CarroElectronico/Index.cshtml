<script>
    $(document).ready(function () {
        $('#BtCartShowp').hide();
        $("#BtCartShowp").prop('onclick', null); // Removes 'onclick' property if found
    });

    function Mod(Id) {

        var CarroElectronico = new Object();
        CarroElectronico.Id = Id;
        CarroElectronico.Item = $('#Inp_' + Id).val();;

        $.ajax({
            url: "@Url.Action("CarroElectronico_Actualizar", "CarroElectronico")",
            type: "POST",
            data: JSON.stringify(CarroElectronico),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            error: function (response) {
               /* alert("MANDAR MENSAJE SE ERROR");*/
            },
            success: function (response) {
                console.log(response);
                var subtotal = 0;
                for (var i = 0; response.length > i; i++) {
                    subtotal += (response[i].ArticuloDetalle.PrecioPublico * response[i].CarroElectronico.Item);
                    if (response[i].CarroElectronico.Id == Id) {
                        $('#Total_' + response[i].CarroElectronico.Id).text(response[i].PrecioTotalText);
                    }
                }

                $('#Total_').text(formatProdPrice(subtotal.toFixed(2)));
                $('#SubTotal_').text(formatProdPrice(subtotal.toFixed(2)));
                //if (response.TotalArticulo == 0) {
                //    alert("MANDAR MENSAJE SE ERROR");
                //} else {
                //    $('#Total_' + response.IdArticulo).text(response.TotalArticulo);
                //    $('#SubTotal_').text(response.TotalNota);
                //    $('#Total_').text(response.TotalNota);
                //}
            }
        });
    }

    function EliminarCarrito2(Num) {

        var CarroElectronico = new Object();
            CarroElectronico.Id = Num;

        $.ajax({
            url: "@Url.Action("CarroElectronico_Eliminar_Articulo", "CarroElectronico")",
            type: "POST",
            data: JSON.stringify(CarroElectronico),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            error: function (Contenido) {
                location.reload();
            },
            success: function (Contenido) {
                location.reload();
            }
        });

    }

    function formatProdPrice(value) {
        return new Intl.NumberFormat("en-US", { style: "currency", currency: "USD" }).format(value);
    }
</script>
