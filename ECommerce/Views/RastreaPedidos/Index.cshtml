    <!-- Required Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/assets/js/script.js "></script>
    <script>
        $(document).ready(function () {
            $("#FormularioNuevoUsuario").on("submit", function (event) {
                // Prevenir el envío del formulario por defecto
                event.preventDefault();

                if (isValidFomr()) {
                    var obj = {};

                    obj['UrlVaible'] = $('#Folio').val();

                    var jsonObject = {
                        "URL": obj
                    };

                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("URL_Cifrado", "URLS")",
                        async: false,
                        data: JSON.stringify(jsonObject),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (result) {
                            window.location.href = '@Url.Action("Rastreo", "RastreaPedidos")?F=' + result.Url;
                        },
                        error: function () {

                        }
                    });

                }
            });

            $(".input-mayusculas").on("input", function () {
                // Obtener el valor actual del input
                var textoActual = $(this).val();

                // Convertir el texto a mayúsculas
                var textoMayusculas = textoActual.toUpperCase();

                // Verificar si el valor ha cambiado antes de actualizar el input
                // Esto evita que se cree un ciclo infinito en algunos navegadores
                if (textoActual !== textoMayusculas) {
                    // Actualizar el valor del input con el texto en mayúsculas y sin números
                    $(this).val(textoMayusculas);
                }
            });
        });


        function isValidFomr() {
            var result = false;

            $('#Folio').css("border", "1px solid #d9dee3");

            if ($('#Folio').val().length == 0) {
                $('#Folio').css("border", "2px solid #ff0049");
                $('#MensajeTextFolio').html("Este dato es obligatorio.");
                $("#MensajeTextFolio").show();
            }

            if ($('#Folio').val().length > 0) {
                result = true;
            }

            return result;
        }

        function ValidaInput(name) {
            if ($('#' + name).val().length > 0) {
                $('#' + name).css("border", "1px solid rgb(222 222 222)");
            } else {
                $('#' + name).css("border", "2px solid #ff0049");
            }

        }

       
    </script>
