<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce</title>

    <link rel="icon" href="~/assets/images/icoCSB.ico" type="image/x-icon">
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <!-- Required Fremwork -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/icon/font-awesome/css/font-awesome.min.css">
    <!-- Style.css -->
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css" />
    <style>
        body[themebg-pattern="theme1"] {
            background-color: #cddbf3;
        }

        body {
            background-color: #b1ce69;
            font-size: 0.875em;
            overflow-x: hidden;
            color: #3b3b3b;
            font-family: "Roboto", sans-serif;
            background-attachment: fixed;
            background-image: linear-gradient(rgba(255, 255, 255, 0.2) 177px, rgba(255, 255, 255, 0.9) 18.6%);
        }

        /*   Typography    */
        .alert, button.close {
            -moz-osx-font-smoothing: grayscale;
            -webkit-font-smoothing: antialiased;
            font-family: 'Lato', sans-serif;
        }

        /*     Alert    */
        .alert {
            border: 0px;
            position: relative;
            padding: .95rem 1.25rem;
            border-radius: 1px;
            color: inherit;
            background-color: #ffffff;
            -webkit-box-shadow: 1px 1px 14px 0px rgba(18, 38, 63, 0.26);
            -moz-box-shadow: 1px 1px 14px 0px rgba(18, 38, 63, 0.26);
            box-shadow: 1px 1px 14px 0px rgba(18, 38, 63, 0.26);
        }

            .alert [data-notify="icon"] {
                display: block;
            }

                .alert [data-notify="icon"]::before {
                    line-height: 35px;
                    font-size: 22px;
                    display: block;
                    left: 15px;
                    position: absolute;
                    top: 50%;
                    transform: translateY(-50%);
                    width: 35px;
                    height: 35px;
                    border-radius: 30px;
                    text-align: center;
                    color: #fff;
                }

            .alert [data-notify="title"] {
                display: block;
                color: #2b2b2b;
                font-weight: 700;
                font-size: 14px;
                margin-bottom: 5px;
            }

            .alert [data-notify="message"] {
                font-size: 13px;
                color: #908e8e;
            }

            .alert .close {
                background: rgba(255, 255, 255, 0.8);
                width: 25px;
                height: 25px;
                line-height: 25px;
                top: 12px !important;
                border-radius: 50%;
            }

        /*    Alert States    */
        .alert-default {
            border-left: 4px solid #1a2035;
        }

            .alert-default [data-notify="icon"]:before {
                background: #1a2035;
            }

        .alert-primary {
            border-left: 4px solid #1572E8;
        }

            .alert-primary [data-notify="icon"]:before {
                background: #1572E8;
            }

        .alert-secondary {
            border-left: 4px solid #6861CE;
        }

            .alert-secondary [data-notify="icon"]:before {
                background: #6861CE;
            }

        .alert-info {
            border-left: 4px solid #48ABF7;
        }

            .alert-info [data-notify="icon"]:before {
                background: #48ABF7;
            }

        .alert-success {
            border-left: 4px solid #31CE36;
        }

            .alert-success [data-notify="icon"]:before {
                background: #31CE36;
            }

        .alert-warning {
            border-left: 4px solid #FFAD46;
        }

            .alert-warning [data-notify="icon"]:before {
                background: #FFAD46;
            }

        .alert-danger {
            border-left: 4px solid #F25961;
        }

            .alert-danger [data-notify="icon"]:before {
                background: #F25961;
                z-index: 9999;
            }

        [data-notify] {
            z-index: 999999999991 !important;
        }

        .pcoded .pcoded-header[header-theme="theme1"] {
            background: linear-gradient(to right, #185a9d, #9C27B0);
        }

        .pcoded .pcoded-navbar[active-item-theme="theme1"] .pcoded-item > li.active > a {
            background: linear-gradient(to right, #185a9d, #9C27B0);
            color: #fff !important;
        }

        .pcoded[fream-type="theme1"] .page-header:before, .pcoded[fream-type="theme1"] .main-menu .main-menu-header:before {
            background: linear-gradient(to right, #185a9deb, #9c27b0c2);
        }

        .bg-c-purple {
            background: linear-gradient(to right, #185a9d, #9C27B0);
        }

        .card .card-header h5:after {
            content: "";
            background-color: #9a28b0;
            position: absolute;
            left: -20px;
            top: 0;
            width: 4px;
            height: 20px;
        }

        .text-c-purple {
            color: #9c28b0;
        }

        .pcoded .pcoded-navbar .pcoded-navigation-label[menu-title-theme="theme1"] {
            color: #5d40a7;
        }

        .btn-success {
            background: linear-gradient(310deg,#17ad37,#98ec2d);
            background-color: #11c15b;
            border-color: #a8ffcd;
            color: #fff;
            cursor: pointer;
            -webkit-transition: all ease-in 0.3s;
            transition: all ease-in 0.3s;
        }

        .md-tabs .nav-item.open .nav-link, .md-tabs .nav-item.open .nav-link:focus, .md-tabs .nav-item.open .nav-link:hover, .md-tabs .nav-link.active, .md-tabs .nav-link.active:focus, .md-tabs .nav-link.active:hover {
            color: #5d40a7;
            border: none;
            background-color: transparent;
            border-radius: 0;
        }

        .nav-tabs .slide {
            background: #9a27af;
            width: 100%;
            height: 4px;
            position: absolute;
            -webkit-transition: left 0.3s ease-out;
            transition: left 0.3s ease-out;
            bottom: 0;
        }

        .btn-primary, .sweet-alert button.confirm, .wizard > .actions a {
            background-color: #448aff;
            background: linear-gradient(310deg,#b1ce69,#b1ce69);
            border-color: #74a99724;
            color: #fff;
            cursor: pointer;
            -webkit-transition: all ease-in 0.3s;
            transition: all ease-in 0.3s;
            border-radius: 8px;
        }

            .btn-primary:hover, .sweet-alert button.confirm:hover, .wizard > .actions a:hover {
                border-color: #e1e6e7;
                background: #e1e6e7;
                color: #74a997;
                transition: background-color 0.3s ease;
            }



            .btn-primary.btn-mat, .sweet-alert button.btn-mat.confirm, .wizard > .actions a.btn-mat {
                background: linear-gradient(310deg,#2152ff,#21d4fd);
                border-radius: 5px;
            }

        .btn-info {
            background: linear-gradient(310deg,#007989,#00bcd4);
            /* background-color: #00bcd4; */
            border-color: #00bcd4;
            color: #fff;
            cursor: pointer;
            -webkit-transition: all ease-in 0.3s;
            transition: all ease-in 0.3s;
        }

        .btn-danger {
            background: linear-gradient(310deg,#ea0606,#ff667c);
            border-color: #ff5252;
            color: #fff;
            cursor: pointer;
            -webkit-transition: all ease-in 0.3s;
            transition: all ease-in 0.3s;
        }

        .btn-warning {
            background: linear-gradient(310deg,#f53939,#fbcf33);
            border-color: #ffe100;
            color: #fff;
            cursor: pointer;
            -webkit-transition: all ease-in 0.3s;
            transition: all ease-in 0.3s;
        }

        .btn-secondary {
            background: linear-gradient(310deg,#404040,#868e96);
            color: #fff;
            background-color: #868e96;
            border-color: #868e96;
            border-radius: 5px;
            border-radius: 8px;
        }

        .btn {
            border-radius: 8px;
            text-transform: initial;
            font-size: 15px;
            padding: 10px 19px;
            cursor: pointer;
        }

        .card {
            border-radius: 14px;
            -webkit-box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
            box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
            border: none;
            margin-bottom: 30px;
            -webkit-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }

        .form-control {
            font-size: 14px;
            border-radius: 5px;
            border: 1px solid #cccccc;
        }

        .h3, h3 {
            font-size: 1.75rem;
            color: #3b3b3b;
            font-size: 20px;
            line-height: 1.2;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.4375rem 0.875rem;
            font-size: 0.9375rem;
            font-weight: 400;
            line-height: 1.8;
            color: #697a8d;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #d9dee3;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: 0.375rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .form-label, .col-form-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: inherit;
        }

        .login-block .auth-box {
            margin: 20px auto 0 auto;
            max-width: 470px;
        }

        .card .card-block {
            padding: 40px;
        }

        .form-check-input[type=checkbox] {
            border-radius: 0.25em;
        }

        .form-check .form-check-input {
            float: left;
            margin-left: 0em;
        }

        .Text-gris {
            color: #868e96;
        }

        p {
            font-size: 15px;
        }

        .btn-primary.disabled, .btn-primary:disabled {
            background-color: #9E9E9E;
            border-color: #9E9E9E;
            color: #ffffff;
            background: linear-gradient(310deg,#bbbbbb,#9E9E9E);
        }

        .text-danger {
            color: #ff0049 !important;
            font-weight: 500;
        }

    </style>
</head>
<body class="animsition">

    @RenderBody()

   
    <script>
        function Redirecionar() {
            window.location.href = '@Url.Action("Index", "Tienda")';
        }

        function isValidEmail(email) {
            // Expresión regular para validar el formato del correo electrónico
            var emailPattern = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailPattern.test(email);
        }

        function ValidaInput(name) {
            if ($('#' + name).val().length > 0) {
                $('#' + name).css("border", "1px solid rgb(222 222 222)");
            } else {
                $('#' + name).css("border", "2px solid #ff0049");
            }
        }
    </script>
</body>
</html>
