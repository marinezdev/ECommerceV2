<script>
    $(document).ready(function () {
        $('#BtCartShowp').hide();
        $("#BtCartShowp").prop('onclick', null); // Removes 'onclick' property if found
    });

    function Mod(IdArticulo) {
        var obj = {};
        obj['IdArticulo'] = IdArticulo;
        obj['Item'] = $('#Inp_' + IdArticulo).val();
        var jsonObject = {
            "Carro_Electronico": obj
        };

        $.ajax({
            url: "@Url.Action("Actualizar_Carrito", "Store")",
            type: "POST",
            data: JSON.stringify(jsonObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            error: function (response) {
                alert("MANDAR MENSAJE SE ERROR");
            },
            success: function (response) {

                if (response.TotalArticulo == 0) {
                    alert("MANDAR MENSAJE SE ERROR");
                } else {
                    $('#Total_' + response.IdArticulo).text(response.TotalArticulo);
                    $('#SubTotal_').text(response.TotalNota);
                    $('#Total_').text(response.TotalNota);
                }
            }
        });
    }

    function EliminarCarrito2(Num) {

        var obj = {};
        obj['Id'] = Num;
        var jsonObject = {
            "Carro_Electronico": obj
        };

        $.ajax({
            url: "@Url.Action("Eliminar_Articulo", "Store")",
            type: "POST",
            data: JSON.stringify(jsonObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            error: function (Contenido) {
                location.reload();
            },
            success: function (Contenido) {
                location.reload();
            }
        });
    }

</script>
